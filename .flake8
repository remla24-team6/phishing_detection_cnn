[flake8]
extend-ignore = E203, E302
exclude =
    # No need to traverse our git directory
    .git,
    # No need to traverse our venv directory
    .env,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    docs/source/conf.py,
max-line-length = 150
max-complexity = 10